{
    "manifest_version": 3,
    "name": "DasX",
    "version": "1.0.2",
    "description": "Расширение для Twitch",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "management"
    ],
    "web_accessible_resources": [{"resources": ["site.js", "dasx-menu-emotes", "dasx-settings-button", "scripts/*"],
    "matches":["*://*.twitch.tv/*"]

}
],
    
    
    "content_scripts":[
        {
            "matches": ["*://*.twitch.tv/*"], 
            "js":["./scripts/content_scripts.js"]
            

        }
    ],

    "action": {
        "default_icon": {
            "16": "./icons/icon-16.png",
            "32": "./icons/icon-32.png",
            "48": "./icons/icon-48.png",
            "128": "./icons/icon-128.png",
            "512": "./icons/icon-512.png"
        },
        "default_title": "Расширение для Twitch"
    }
}